<Window x:Class="OCR_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OCR_WPF"
        mc:Ignorable="d"
        Title="[DEMO] Nick scrapper v.1.0.0.0" Height="700" Width="400" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="45"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <GroupBox x:Name="GB" Header="Screenshot team">
            <Image x:Name="ScanImage" Grid.Row="0" Margin="5 5 5 5"/>
        </GroupBox>
        
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
            <Button x:Name="StartScanBtn" Margin="5 5 5 5" Width="130" Height="32" Content="Scan team" Click="StartScan_Click"/>
            <!--<Button x:Name="ScreenshotTeamBtn" Margin="5 5 5 5" Width="130" Height="32" Content="Screenshot team" Click="ScreenshotTeam_Click"/>-->
        </StackPanel>
        <TextBox x:Name="OutputText" Grid.Row="2" Margin="5 5 5 5"/>
    </Grid>
</Window>
